<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC 	
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="main.Employee" table="Emp">
		<id name="id" column="id">
			<generator class="assigned" />
			<!-- <generator class="identity" -->   <!-- 1st use auto then use assigned but vise-vesa in not possible -->
		</id>
		<property name="Name" column="Name" />
		<property name="phone" column="phone" />      <!-- not-null="true" unique ="true" -->
		<property name="desg" column="desg" /> 		<!-- not-null="true" -->
		<property name="email" column="email" /> 	<!-- not-null="true" unique="true" -->
		<property name="password" column="password" /> 		<!-- not-null="true" -->
	</class>
</hibernate-mapping>